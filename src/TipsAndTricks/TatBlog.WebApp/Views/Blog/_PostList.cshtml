@model Post
@{
     var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
        ? "/images/image_1.jpg"
        : $"/{Model.ImageUrl}";
 }

<article class="blog-entry mb-4">
    <div class="card">
        <div class="row 9-0">
             <div class="col-md-4">
                <img sre="@imageUrl"
                     class="card-img"
                     alt="Model.Title">
             </div>
             <div class="col-md-8">
                <div class="card-body">
                        <h5 class="card-title">
                            @Model.Title
                        </h5>
                         <р class="card-text">
                            <small class="text-muted">
                                Tác giả:
                            </small>
                            <span class="text-primary">
                                @Model.Author.FullName
                            </span>
                            <small class="text-suted">
                                Chủ đề:
                            </small>
                            <span class="text-primary">
                                @Model.Category.Name
                            </span>
                         </р>
                            
                        
                        <р class="card-text">
                             @Html.Raw(Model.ShortDescription)
                        </р>
                                
                        
                        <div class="tag-list">
                            <partial name="_TagList" model="@Model.Tags" />
                        </div>
                     <div class="text-end">
                         <a asp-controllera="Blog"
                           asp-actione="Post"
                           asp-route-year=" @Model.PostedDate.Year"
                           asp-route-month="@Model.PostedDate.Month"
                           asp-route-day="@Model.PostedDate.Day"
                           asp-route-slug="@Model.UrlSlug"
                           class="btn btn-primary"
                           title="@Model.Title">
                             Хеm chi tiết
                         </a>
                     </div>
                 </div>
             </div>
         </div>
     </div>
</article>

