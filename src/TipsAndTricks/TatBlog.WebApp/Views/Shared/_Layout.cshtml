<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["PageTitle"] - Tips & Aacute; Tricks Blog</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="shortcut icon" href="https://t.vdoc.vn/data/image/2020/11/03/Toan2-200-size-32x32-znd.svg" />
    @await RenderSectionAsync("style",required:false)
</head>
@*Thanh tiêu đề logo,menu*@
<partial name="_Header"/>
<div class="container-fluid">
    <div class="row">
        <div class="col-9">
            @*Phần nội dung chính*@
            @*Lỗi ở đây  nè ()*@
            @RenderBody()
        </div>
        <div class="col-3 border-start">
            @*danh sách chuyển mục, tag cloud*@
            @*<paertial name ="_SideBar"/>   Lỗi ở đây nữa nè*@
            @Html.Partial("_SideBar")
        </div>
    </div>
</div>

<footer class="border-top footer text-muted ">
    <div class="container-fluid text-center">
        &copy; 2023 - Tips & Aacute; Tricks Blog
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"/>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" />
<script src="~/js/main.js"/>

 @await RenderSectionAsync("scripts",required:false)
</html>
